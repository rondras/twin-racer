/****************************************/
/* common styles used for v1 through v4 */
/****************************************/
html, body {
    height: 100%;
    margin: 0;
    padding: 0;
    overflow: hidden; /* This prevents scrollbars from appearing */
}

body {
    font-family: Arial, Helvetica, sans-serif;
}

#racer {
    position: relative;
    width: 100%;
    height: 100%;
    margin: 0;
    border: none;
}

#canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #72D7EE;
}

#mute {
    background-position: 0px 0px;
    width: 32px;
    height: 32px;
    background: url(images/mute.png);
    display: inline-block;
    cursor: pointer;
    position: absolute;
    top: 10px;
    right: 10px;
}

#mute.on {
    background-position: -32px 0px;
}

#hud {
    position: absolute;
    z-index: 10;
    width: 100%;
    padding: 5px 0;
    font-family: Verdana, Geneva, sans-serif;
    font-size: 1em;
    background-color: rgba(0, 0, 0, 0.8); /* Match the example color */
    color: white; /* Keep text white for contrast */
    box-sizing: border-box;
    display: flex;
    justify-content: space-around;
}

#hud .hud {
    padding: 5px 10px;
    border: 0px solid black;
    margin: 0 5px;
    transition: background-color 2s;
}

#hud #speed {
    float: right;
}

#hud #current_lap_time {
    float: left;
}

#hud #last_lap_time {
    float: left;
    display: none;
}

#hud #fast_lap_time {
    display: block;
    text-align: center;
}

#hud .value {
    color: yellow; /* Change value color to yellow as in the example */
    font-weight: bold;
}

#hud .fastest {
    background-color: rgba(255, 215, 0, 0.8);
}

#controls {
    position: absolute;
    bottom: 20px;
    width: 100%;
    display: flex;
    justify-content: space-around;
    z-index: 10;
}

.control-btn {
    padding: 15px;
    font-size: 16px;
    background-color: rgba(0, 0, 0, 0.7);
    color: white;
    border: none;
    border-radius: 5px;
    flex: 1;
    margin: 5px;
    max-width: 100px;
}

#user-info {
    display: flex;
    align-items: center;
    margin-top: 20px;
}

#user-info img {
    border-radius: 50%;
    width: 50px;
    height: 50px;
    margin-right: 15px;
}

/* Confetti CSS */
.confetti {
    position: absolute;
    width: 10px;
    height: 10px;
    background-color: red; /* Default color, change via JavaScript */
    animation: confetti-fall 3s linear forwards;
    pointer-events: none;
    z-index: 1001;
}

@keyframes confetti-fall {
    0% { transform: translateY(0); opacity: 1; }
    100% { transform: translateY(100vh); opacity: 0; }
}

/* Rain Effect CSS */
.rain-drop {
    position: absolute;
    width: 2px;
    height: 10px;
    background-color: rgba(173, 216, 230, 0.5);
    pointer-events: none;
    z-index: 1000;
}
